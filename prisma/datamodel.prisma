type User {
  id: ID! @id
  email: String! @unique
  password: String!
  username: String
  firstName: String
  lastName: String
  avatar: String
  settings: Json
}

type Project {
  id: ID! @id
  name: String!
  description: String
  user: User!
  boards: [Board]
}

type Access {
  id: ID! @id
  project: Project!
  user: User!
  permissions: Json
}

type Board {
  id: ID! @id
  project: Project
  name: String!
  description: String
  columns: [Column]
}

type Column {
  id: ID! @id
  board: Board!
  name: String!
  settings: Json
  cards: [Card]
}

type Card {
  id: ID! @id
  column: Column!
  priority: Priority!
  type: Type!
  name: String!
  description: String
}

enum Priority {
  Critical
  High
  Medium
  Low
}

enum Type {
  Task
  Bug
  Improvement
}
